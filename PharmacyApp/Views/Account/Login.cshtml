@{
    Layout = "_Layout";  // Use the layout page if you have one
}
@model PharmacyApp.ViewModels.CustomerViewModel

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Healthcare Store</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <!-- Header Section -->
    <header class="bg-blue-600 text-white py-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-3xl font-semibold">Healthcare Store</h1>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto my-8 p-6 bg-white rounded-lg shadow-lg max-w-md">

        <h2 class="text-2xl font-semibold mb-4 text-center">Login / Create Account</h2>

        <!-- Login / Create Account Form -->
        <form method="post" asp-action="Login">

            <!-- Email Input -->
            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 font-medium">Email</label>
                <input asp-for="Email"  type="email" id="email"  class="w-full mt-2 px-4 py-2 border border-gray-300 rounded-lg" placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-danger"/>
            </div>

            <!-- Password Input -->
            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 font-medium">Password</label>
                <input asp-for="Password"  type="password" id="password" class="w-full mt-2 px-4 py-2 border border-gray-300 rounded-lg" placeholder="Enter your password" required>
                <span asp-validation-for="Password" class="text-danger" />

            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between items-center">
                <!-- Create Account Button -->
                <button type="submit" name="action" value="create" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Create Account</button>
                <!-- Sign In Button -->
                <button type="submit" name="action" value="signin" class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">Sign In</button>
            </div>

        </form>

        <!-- Additional Info -->
        <div class="mt-4 text-center">
            <p class="text-sm text-gray-600">By signing in or creating an account, you agree to our <a href="#" class="text-blue-600 hover:underline">Terms and Conditions</a>.</p>
        </div>

    </main>

    <!-- Footer -->
    <footer class="bg-blue-600 text-white py-4">
        <div class="container mx-auto text-center">
            <p>&copy; 2025 Healthcare Store. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>